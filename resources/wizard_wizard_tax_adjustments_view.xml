<hexya>
    <data>

        <view id="account_tax_adjustments_wizard" model="TaxAdjustmentsWizard">
            <form>
                <h1>
                    <field name="reason" class="oe_inline" placeholder="Reason..."/>
                </h1>
                <group>
                    <group>
                        <field name="amount"/>
                    </group>
                    <group>
                        <field name="tax_id" widget="selection"/>
                    </group>
                    <group string="Accounts">
                        <field name="debit_account_id"/>
                        <field name="credit_account_id"/>
                    </group>
                    <group string="Options">
                        <field name="journal_id"/>
                        <field name="date"/>
                    </group>
                </group>
                <footer>
                    <button name="create_move" string="Create and post move" type="object" default_focus="1"
                            class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </view>

    </data>
</hexya>
